<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v4.widget.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imagePersonPic"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:src="@drawable/ico_person_unknown"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imagePersonPic"
        android:text="TextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imagePersonPic"
        android:layout_toEndOf="@+id/imagePersonPic" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center|left"
        android:layout_alignBottom="@+id/imagePersonPic"
        android:layout_toRightOf="@+id/imagePersonPic"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center|left"
        android:text="TextView"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/imagePersonPic"
        android:layout_marginLeft="150dp"
        android:layout_alignBottom="@+id/textView2" />

</RelativeLayout>